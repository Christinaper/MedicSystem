/* pages/home/home.wxss */
.page-header {
  height: 150rpx;
  line-height: 250rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx 40rpx 40rpx;
}
.page-header-title {
  font-size: 50rpx;
  font-weight: 600;
}
/* .page-header-avatar {} */
image.avatar {
  width: 20rpx;
  height: 20rpx;
}
.image-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}
.in-image {
  width: 100%;
  height: 400rpx;
}
.product-img {
  width: 100%;
  height: 300rpx;
  border-radius: 36rpx;
}
.rec-title {
  font-size: 32rpx;
  padding: 10rpx 40rpx 0rpx 40rpx;
  font-weight: 600;
}

.introduction {
  padding: 20px;
  text-align: center;
}

.introduction view:first-child {
  font-size: 50rpx;
  line-height: 1.5;
  margin-bottom: 10px;
}

.introduction text:last-child {
  font-size: 14px;
  color: #666;
}