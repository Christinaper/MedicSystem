/* pages/detail/detail.wxss */
.det-image {
  width: 100%;
  height: 600rpx;
  padding: 50rpx;
  box-sizing: border-box;
  /* border-radius: 27%; */
}
.det-title {
  display: flex;
  justify-content: space-between;
  margin: -100rpx 50rpx 0 50rpx;
  padding: 45rpx 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  font-size: large;
  font-weight: 600;
  height: 120rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  /* border: 2px solid #167f7b; */
  position: relative;
  z-index: 9999;
}
.det-title-price {
  color: #167f7b;
}
.det-dsc {
  padding: 50rpx;
}
.btn-group {
  display: flex;
  width: 50vw;
}
.btn-cart {
  width: 290rpx;
}
