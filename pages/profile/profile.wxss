/* pages/profile/profile.wxss */
.top-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 150rpx;
}
.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 20rpx solid #ffffff;
  /* [水平偏移量] [垂直偏移量] [模糊半径] [颜色]; */
  /* 3圈 */
  box-shadow: 0px 0px 10px #ecf9fb,
              0px 0px 20px #b4d5e8,
              0px -10px 40px #f1fafc;
}
.card {
  width: 100%;
  height: 130rpx;
  background-color: #ffffff;
  border-top-left-radius: 60rpx;
  border-top-right-radius: 60rpx;
  margin-top: -50px;
  z-index: -1;
  box-shadow: 0px 5px 10px #e7eff6;
}
.info-container {
  background-color: #ffffff;
  padding: 0 60rpx;
}
.info-msg {
  color: #c3d1ea;
  font-size: 30rpx;
  padding-bottom: 40rpx;
}
.info-text {
  color: #34476c;
  font-size: 38rpx;
  font-weight: 600;
  letter-spacing: 5rpx;
  padding-bottom: 20rpx;
}
.main-cell {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 60rpx;
  background-color: #fff;
  color: #34476c;
  border-top: 2rpx solid #eaf2f9;
  border-bottom: 2rpx solid #eaf2f9;
}
.main-cell-item {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}
.login-btn {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translate(-50%, 0);
}